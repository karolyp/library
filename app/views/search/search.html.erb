<div class="container-fluid">
  <% if @result_set.size > 0 %>
    <div class="alert alert-success" role="alert">
      Találatok száma: <%= @result_set.size %> db
    </div>
    <% @result_set.each do |book| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= book.title %>
          </h5>
          <%= link_to 'Megnyitás', book_path(book), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-danger text-center" role="alert">
      A keresett kifejzés nem található!
    </div>
  <% end %>
</div>