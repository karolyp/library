<!DOCTYPE html>
<html>
<head>
  <title>Library</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to t('menu.app_name'), '#', class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item ">
        <%= link_to t('menu.books'), books_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <% if current_user %>
          <%= link_to t('menu.rentals'), '#', class: 'nav-link' %>
        <% else %>
          <%= link_to t('menu.rentals'), '#', class: 'nav-link disabled' %>
        <% end %>
      </li>
      <li>
        <%= form_tag '#', class: 'form-inline my-2 my-lg-0' do %>
          <%= search_field_tag 'search', nil, class: 'form-control mr-sm-2', placeholder: t('menu.search'), aria: {label: t('menu.search')} %>
          <%= button_tag t('menu.search_btn'), class: 'btn btn-outline-success my-2 my-sm-0' %>
        <% end %>
      </li>
    </ul>

    <ul class="navbar-nav navbar-right">
      <% if current_user %>
        <li class="nav-item dropdown">
          <%= link_to t('menu.profile.my_profile'),
                      '#',
                      class: 'nav-link  dropdown-toggle',
                      id: 'navbarDropdown',
                      role: 'button',
                      data: {toggle: 'dropdown'},
                      aria: {haspopup: 'true', expanded: 'false'}
          %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to '#', class: 'dropdown-item' do %>
              <i class="fas fa-user"></i>
              <%= t('menu.profile.my_profile_view') %>
            <% end %>
            <%= link_to '#', class: 'dropdown-item' do %>
              <i class="fas fa-edit"></i>
              <%= t('menu.profile.my_profile_edit') %>
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to destroy_user_session_path, class: 'dropdown-item', method: 'delete' do %>
              <i class="fas fa-sign-out-alt"></i>
              <%= t('menu.profile.log_out') %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li>
          <%= link_to new_user_session_path , class: 'nav-link' do %>
            <i class="fas fa-user"></i>
            <%= t('menu.profile.log_in') %>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class: 'nav-link' do %>
            <i class="fas fa-user-plus"></i>
            <%= t('menu.profile.sign_up') %>
          <% end %>
        </li>
      <% end %>


    </ul>
  </div>
</nav>


<%= yield %>
</body>
</html>
